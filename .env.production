# Production Environment Configuration
# Copy this file to .env and fill in your production values

# Node Environment
NODE_ENV=production

# Database Configuration
DB_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://anton:your-secure-database-password@postgres:5432/anton

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@redis:6379

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-very-secure-nextauth-secret-key-minimum-32-characters

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key

# API URLs (adjust for your domain)
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=wss://api.your-domain.com
ORCHESTRATOR_URL=http://orchestrator:3002
WEBHOOK_URL=https://api.your-domain.com/webhook

# Grafana Configuration (optional)
GRAFANA_PASSWORD=your-secure-grafana-admin-password

# S3 Storage Configuration (optional)
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_BUCKET_NAME=anton-projects
S3_REGION=us-east-1

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
EMAIL_FROM=Anton Platform <noreply@your-domain.com>

# Monitoring & Analytics (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_CONCURRENT_AGENTS=100

# Security
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
SESSION_TIMEOUT_MINUTES=1440
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.js,.ts,.jsx,.tsx,.json,.md,.yml,.yaml,.txt,.py,.go,.rs,.java,.c,.cpp,.h,.hpp

# Feature Flags
ENABLE_PUBLIC_TEMPLATES=true
ENABLE_AGENT_MARKETPLACE=false
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true
ENABLE_BETA_FEATURES=false

# Resource Limits
MAX_AGENTS_PER_USER=50
MAX_PROJECTS_PER_USER=100
MAX_EXECUTION_TIME_MINUTES=60
MAX_PARALLEL_EXECUTIONS=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=anton-backups

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/app/logs/anton.log
LOG_ROTATION_SIZE=100M
LOG_RETENTION_DAYS=7

# Performance
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
ENABLE_COMPRESSION=true
ENABLE_CDN=true
CDN_URL=https://cdn.your-domain.com

# Deployment
DEPLOYMENT_ENV=production
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_CLUSTER=anton-prod