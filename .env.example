# Anton v2 Environment Configuration Template
# Copy this file to .env and configure the values for your environment

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=production
APP_VERSION=2.0.0

# ===== DATABASE CONFIGURATION =====
# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=anton
POSTGRES_USER=anton
POSTGRES_PASSWORD=your-secure-database-password-here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# ===== REDIS CONFIGURATION =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Redis Cluster Configuration (if using cluster)
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_NODES=redis-node-1:7000,redis-node-2:7001,redis-node-3:7002

# ===== AUTHENTICATION & SECURITY =====
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-in-production

# API Keys
API_KEY=your-api-key-for-machine-to-machine-access

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/auth/github/callback

# ===== CLAUDE API CONFIGURATION =====
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MAX_TOKENS=4000
CLAUDE_MODEL=claude-3-opus-20240229

# ===== SERVICE URLS =====
FRONTEND_URL=http://localhost:3000
API_SERVER_URL=http://localhost:3001
ORCHESTRATOR_URL=http://localhost:3002

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=http://localhost:3002

# ===== PORT CONFIGURATION =====
API_PORT=3001
FRONTEND_PORT=3000
ORCHESTRATOR_PORT=3002
HTTP_PORT=80
HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3100
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# ===== MONITORING & LOGGING =====
# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
ENABLE_FILE_LOGGING=true

# Elasticsearch (for centralized logging)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-elasticsearch-password
ELASTICSEARCH_AUTH=true

# Grafana Configuration
GRAFANA_PASSWORD=your-grafana-admin-password
GRAFANA_DOMAIN=localhost
GRAFANA_SMTP_ENABLED=false

# ===== SECURITY CONFIGURATION =====
# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# IP Filtering (comma-separated)
IP_WHITELIST=
IP_BLACKLIST=

# ===== FILE STORAGE =====
# Local file storage paths
PROJECTS_DIR=./projects
UPLOADS_DIR=./uploads
LOGS_DIR=./logs

# S3-compatible storage (optional)
S3_ENABLED=false
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=anton-storage
S3_REGION=us-east-1

# ===== EMAIL CONFIGURATION =====
# SMTP Configuration for notifications
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=Anton v2 <noreply@your-domain.com>

# ===== WEBHOOK CONFIGURATION =====
# Webhook URLs for notifications
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# ===== ADVANCED CONFIGURATION =====
# Performance Configuration
MAX_CONCURRENT_AGENTS=50
MAX_FLOW_EXECUTION_TIME=7200
AGENT_TIMEOUT=1800
HOOK_TIMEOUT=30

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_CORES=4
MAX_DISK_USAGE_GB=100

# Development Configuration
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_PROFILING=false
ENABLE_REQUEST_LOGGING=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/anton_test
TEST_REDIS_URL=redis://localhost:6380

# ===== SSL/TLS CONFIGURATION =====
# SSL Certificate paths (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_CA_PATH=/etc/nginx/ssl/ca.pem

# ===== BACKUP CONFIGURATION =====
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ===== FEATURE FLAGS =====
# Enable/disable features
FEATURE_AI_PLANNING=true
FEATURE_CLAUDE_HOOKS=true
FEATURE_REAL_TIME_PREVIEW=true
FEATURE_MANUAL_REVIEW=true
FEATURE_AGENT_MARKETPLACE=true
FEATURE_COLLABORATION=false
FEATURE_WHITE_LABELING=false

# ===== THIRD-PARTY INTEGRATIONS =====
# GitHub Integration
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Jira Integration
JIRA_ENABLED=false
JIRA_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

# Linear Integration
LINEAR_ENABLED=false
LINEAR_API_KEY=

# ===== ANALYTICS =====
# Analytics and telemetry
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=
GOOGLE_ANALYTICS_ID=

# User behavior tracking
TELEMETRY_ENABLED=true
TELEMETRY_ENDPOINT=https://telemetry.anton.ai

# ===== MAINTENANCE =====
# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Anton v2 is temporarily unavailable for maintenance. Please try again later."

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# ===== DOCUMENTATION =====
# For development and documentation purposes
# This file serves as a comprehensive reference for all available
# environment variables in the Anton v2 system. Not all variables
# are required - many have sensible defaults or are optional features.
#
# Required variables for basic operation:
# - DATABASE_URL or POSTGRES_* variables
# - REDIS_URL or REDIS_* variables
# - JWT_SECRET and JWT_REFRESH_SECRET
# - CLAUDE_API_KEY
#
# Recommended for production:
# - All security-related secrets
# - SENTRY_DSN for error tracking
# - SMTP_* variables for notifications
# - SSL certificate paths
# - Backup configuration