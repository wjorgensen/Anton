{
  "name": "Setup Agent Hook Configuration",
  "description": "Hook configuration for framework setup agents (Next.js, Vite, Express, etc.)",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo $(date +%s) > $CLAUDE_PROJECT_DIR/.start_time"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/stop.sh --node-id $NODE_ID --status $STATUS --exit-code $EXIT_CODE --session-id $SESSION_ID",
            "timeout": 30000,
            "retryOnFailure": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/track-changes.sh --node-id $NODE_ID --tool $TOOL_NAME --file $FILE_PATH --session-id $SESSION_ID",
            "continueOnError": true
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Package installation detected\" >> $CLAUDE_PROJECT_DIR/setup.log",
            "continueOnError": true
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "curl -s -X POST -H 'Content-Type: application/json' -d '{\"nodeId\": \"$NODE_ID\", \"message\": \"$MESSAGE\"}' http://localhost:3002/api/hooks/notification",
            "continueOnError": true
          }
        ]
      }
    ]
  },
  "environment": {
    "ORCHESTRATOR_URL": "http://localhost:3002",
    "PREVIEW_URL": "http://localhost:3003",
    "MAX_RETRIES": "3",
    "HOOK_TIMEOUT": "30000"
  },
  "security": {
    "allowedCommands": [
      "stop.sh",
      "track-changes.sh",
      "echo",
      "curl",
      "date"
    ],
    "maxExecutionTime": 30000,
    "sandboxed": true
  }
}