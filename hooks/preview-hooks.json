{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [{
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/hooks/output-collector.sh start"
        }]
      }
    ],
    "SessionStop": [
      {
        "hooks": [{
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/hooks/output-collector.sh stop"
        }]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [{
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/hooks/output-collector.sh tool $TOOL_NAME '$TOOL_OUTPUT'"
        }]
      },
      {
        "matcher": "Bash",
        "hooks": [{
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/hooks/output-collector.sh tool Bash '$TOOL_OUTPUT'"
        }]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [{
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/hooks/output-collector.sh stream '$USER_PROMPT' user_input"
        }]
      }
    ],
    "AgentResponse": [
      {
        "hooks": [{
          "type": "command",
          "command": "$CLAUDE_PROJECT_DIR/hooks/output-collector.sh stream '$AGENT_RESPONSE' agent_output"
        }]
      }
    ]
  }
}