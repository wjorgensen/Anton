{
  "name": "anton-v2",
  "version": "2.0.0",
  "description": "AI Orchestration Platform with Claude Code Integration",
  "private": true,
  "workspaces": [
    "backend",
    "anton-visual-editor"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd anton-visual-editor && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd anton-visual-editor && npm run build",
    "clean": "rm -rf node_modules backend/node_modules anton-visual-editor/node_modules",
    "install:all": "npm install && cd backend && npm install && cd ../anton-visual-editor && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}