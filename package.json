{
  "name": "anton-v2",
  "version": "2.0.0",
  "description": "Visual AI Orchestration Platform",
  "private": true,
  "workspaces": [
    "orchestration",
    "anton-visual-editor",
    "planning-service"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:orchestrator\" \"npm run dev:frontend\" \"npm run dev:planning\"",
    "dev:orchestrator": "cd orchestration && npm run dev",
    "dev:frontend": "cd anton-visual-editor && npm run dev",
    "dev:planning": "cd planning-service && npm run dev",
    "build": "npm run build:orchestrator && npm run build:frontend && npm run build:planning",
    "build:orchestrator": "cd orchestration && npm run build",
    "build:frontend": "cd anton-visual-editor && npm run build",
    "build:planning": "cd planning-service && npm run build",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:e2e:playwright": "playwright test",
    "test:e2e:playwright:headed": "playwright test --headed",
    "test:e2e:playwright:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:system:complete": "node tests/e2e/test-runner.js",
    "test:quick": "jest tests/e2e/complete-system-test.js --maxWorkers=1",
    "monitor:production": "tsx scripts/monitor-production.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "cd orchestration && npx prisma migrate dev",
    "db:seed": "cd orchestration && npx prisma db seed",
    "clean": "rm -rf node_modules orchestration/node_modules anton-visual-editor/node_modules planning-service/node_modules",
    "install:all": "npm install && npm run install:services",
    "install:services": "cd orchestration && npm install && cd ../anton-visual-editor && npm install && cd ../planning-service && npm install"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "axios": "^1.11.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "puppeteer": "^21.0.0",
    "ws": "^8.14.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 300000,
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js",
      "**/tests/e2e/*.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "html",
      "text-summary"
    ]
  }
}
