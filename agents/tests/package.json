{
  "name": "agent-library-tests",
  "version": "1.0.0",
  "description": "Comprehensive unit tests for the agent library system",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:all",
    "test:all": "npm run test:schema && npm run test:loader && npm run test:hooks",
    "test:schema": "node test-agent-schema.js",
    "test:loader": "node test-agent-loader.js", 
    "test:hooks": "node test-agent-hooks.js",
    "test:watch": "nodemon --watch ../library --watch ../schemas --exec npm test"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}