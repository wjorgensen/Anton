{
  "id": "manual-review",
  "name": "Manual Review Agent",
  "category": "review",
  "type": "manual-review",
  "version": "1.0.0",
  "description": "Specialized agent for orchestrating manual review checkpoints, presenting work for human validation, and processing review feedback",
  "icon": "review",
  "color": "#9333EA",
  "instructions": {
    "base": "You are a review orchestration specialist. Your role is to present work for manual review, capture feedback, process review decisions, and coordinate necessary changes based on reviewer input. You ensure clear communication between automated processes and human reviewers.",
    "contextual": "Present for review: {{reviewScope}}. Files to review: {{filesToReview}}. Review criteria: {{reviewCriteria}}. Required approval level: {{approvalLevel}}."
  },
  "claudeMD": "# Manual Review Agent\n\nOrchestrates human-in-the-loop review processes:\n- Code review presentation\n- Change summary generation\n- Feedback collection\n- Approval workflow management\n- Review decision processing\n- Change request handling\n- Documentation of review outcomes\n\n## Core Competencies\n- Review package preparation\n- Diff generation and presentation\n- Feedback categorization\n- Action item extraction\n- Review metrics tracking\n- Approval chain management\n- Audit trail maintenance\n\n## Review Standards\n- Present clear, concise summaries\n- Highlight critical changes\n- Provide context for decisions\n- Track all feedback\n- Ensure traceability\n- Document approval decisions",
  "inputs": [
    {
      "name": "reviewScope",
      "type": "string",
      "required": true,
      "description": "Scope of review (full, changes, specific-feature)"
    },
    {
      "name": "filesToReview",
      "type": "array",
      "required": false,
      "description": "Specific files requiring review"
    },
    {
      "name": "reviewCriteria",
      "type": "array",
      "required": false,
      "description": "Criteria for review evaluation",
      "default": ["functionality", "code-quality", "security", "performance"]
    },
    {
      "name": "approvalLevel",
      "type": "string",
      "required": false,
      "description": "Required approval level (single, multiple, unanimous)",
      "default": "single"
    },
    {
      "name": "timeout",
      "type": "number",
      "required": false,
      "description": "Review timeout in minutes",
      "default": 30
    },
    {
      "name": "reviewers",
      "type": "array",
      "required": false,
      "description": "Specific reviewers to notify"
    }
  ],
  "outputs": [
    {
      "name": "reviewStatus",
      "type": "string",
      "description": "Review status (approved, rejected, changes-requested)"
    },
    {
      "name": "feedback",
      "type": "array",
      "description": "Collected feedback items"
    },
    {
      "name": "actionItems",
      "type": "array",
      "description": "Action items extracted from review"
    },
    {
      "name": "approvals",
      "type": "array",
      "description": "List of approvals received"
    },
    {
      "name": "reviewReport",
      "type": "object",
      "description": "Comprehensive review report"
    }
  ],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/stop.sh --node-id $NODE_ID --status $STATUS --output-type review"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/present-for-review.sh --node-id $NODE_ID --files $FILES"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/capture-review-feedback.sh --node-id $NODE_ID --feedback $USER_INPUT"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/track-review-changes.sh --node-id $NODE_ID --file $FILE_PATH"
          }
        ]
      }
    ]
  },
  "resources": {
    "estimatedTime": 30,
    "estimatedTokens": 50000,
    "requiresGPU": false,
    "maxRetries": 1,
    "memory": "2GB",
    "cpu": "1 core"
  },
  "dependencies": [],
  "tags": ["review", "manual", "approval", "feedback", "checkpoint", "quality-assurance", "human-in-loop"]
}