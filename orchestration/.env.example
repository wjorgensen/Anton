# Database Configuration
# SQLite (for development)
DATABASE_URL="file:./dev.db"

# PostgreSQL (for production)
# DATABASE_URL="postgresql://user:password@localhost:5432/anton"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
# REDIS_PASSWORD="your-redis-password"

# Server Configuration
PORT=3002
NODE_ENV="development"

# Authentication & Security
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=10
SESSION_SECRET="another-secret-key-change-in-production"

# CORS Configuration
CORS_ORIGIN="*"
# For production: CORS_ORIGIN="https://yourdomain.com,https://api.yourdomain.com"

# Anton Configuration
CLAUDE_PROJECT_BASE_DIR="/tmp/anton-agents"

# Worker Configuration
WORKER_CONCURRENCY=5

# Admin Configuration (optional - for initial admin user)
# ADMIN_EMAIL="admin@anton.app"
# ADMIN_INITIAL_PASSWORD="changeme123"

# Rate Limiting Configuration (optional - uses defaults if not set)
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
# RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_BASE_URL="http://localhost:3002"

# Frontend URL (for production CORS)
# FRONTEND_URL="https://your-frontend-domain.com"

# Monitoring & Logging (optional)
# SENTRY_DSN=""
# LOG_LEVEL="info"